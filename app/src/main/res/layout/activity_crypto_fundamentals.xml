                <View
                    android:id="@+id/view4"
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:background="@color/medium_gray" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl5"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/t44"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/topic_four"
                    android:gravity="center"
                    android:text="@string/topic4"
                    android:textColor="@color/purple"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_toLeftOf="@+id/t44"
                    android:layout_weight="1"
                    android:fontFamily="@font/alike_angular"
                    android:gravity="center"
                    android:text="@string/storing"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl8"
                android:orientation="horizontal">


                <View
                    android:id="@+id/view6"
                    android:layout_width="150dp"
                    android:layout_height="3dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/img4"
                    android:background="@color/medium_gray" />

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/purple_arrow" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="6dp"
                    android:background="@color/medium_gray" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl9"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/t55"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/topic_five"
                    android:gravity="center"
                    android:text="@string/topic5"
                    android:textColor="@color/red"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/t55"
                    android:layout_weight="1"
                    android:fontFamily="@font/alike_angular"
                    android:gravity="center"
                    android:text="@string/owning"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl10"
                android:orientation="horizontal">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/medium_gray" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll1"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@color/medium_gray" />

                <TextView
                    android:id="@+id/t66"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/topic_one"
                    android:gravity="center"
                    android:text="@string/topic6"
                    android:textColor="@color/orange"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/t6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/t66"
                    android:layout_weight="1"
                    android:fontFamily="@font/alike_angular"
                    android:gravity="center"
                    android:text="@string/benefits"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/t66"
                    android:background="@color/medium_gray" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/orange_arrow_one" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/img6"
                    android:background="@color/medium_gray" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:background="@color/medium_gray" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl1"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/t77"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/topic_two"
                    android:gravity="center"
                    android:text="@string/topic7"
                    android:textColor="@color/green"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/t7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_toLeftOf="@+id/t77"
                    android:layout_weight="1"
                    android:fontFamily="@font/alike_angular"
                    android:gravity="center"
                    android:text="@string/key"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl3"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/green_arrow" />



            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>